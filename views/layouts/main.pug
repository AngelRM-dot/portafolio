doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{datos.nombre} | #{title}
        link(rel="stylesheet", href="/css/style.css")
        link(rel="icon", type="image/png", href="/img/minecraft-block.png")
    body
    .minecraft-container(style="display: flex; flex-direction: column; min-height: 100vh;")
      block nav
        include ../includes/nav

      main.minecraft-main(style="flex: 1;")
        block content

      block footer
        include ../includes/footer